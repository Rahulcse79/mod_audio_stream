<include>
  <context name="default">
    <extension name="ai_ivrs">
      <condition field="destination_number" expression="^1234$">

        <action application="answer"/>
        <action application="set" data="media_bug_answer_req=true"/>
        <action application="set" data="audio_streaming=true"/>
        <action application="set" data="audio_streaming_direction=both"/>
        <action application="export" data="nolocal:STREAM_BUFFER_SIZE=200"/>
        <action application="export" data="nolocal:api_on_answer=sched_api +1 none uuid_audio_stream ${uuid} start ws://127.0.0.1:8765 mono 8k"/>  
        <action application="park"/>
      
      </condition>
    </extension>
  </context>
</include>

